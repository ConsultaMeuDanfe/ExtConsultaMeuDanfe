{
  "name": "Consultar NFe/Gerar DANFe",
  "version": "1.0.0",
  "description": "Consulta meu DANFe",
  "manifest_version": 3,
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_icon": "favicon.png",
    "default_popup": "./src/popup.html"
  }
}
