{
    "name": "Consultar NFe/Gerar DANFe",
    "version": "1.0.0",
    "description": "Consulta meu danfe",
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "permissions": ["storage"],  
    "browser_action": {    
        "default_icon": "favicon.png",    
        "default_popup": "./src/popup.html"  
    },   
    "manifest_version": 2
}
